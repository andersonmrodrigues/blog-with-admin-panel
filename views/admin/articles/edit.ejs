<%- include ('../../partials/header.ejs') %> <%- include
('../../partials/navbar.ejs') %>
<body>
  <div class="container">
    <hr />
    <div class="card">
      <div class="card-header">
        <h2>Article Edit</h2>
      </div>
      <div class="card-body">
        <form action="/articles/update" method="post">
          <input type="hidden" name="id" value="<%= article.id %>" />
          <label for="">Title: </label>
          <input
            class="form-control"
            type="text"
            name="title"
            value="<%= article.title %>"
            placeholder="Fill your article title"
          />
          <div class="form-group">
            <label for="">Category</label>
            <input type="hidden" value="<%= article.categoryId %>""
            id="categorySelected">
            <select class="form-control" name="categoryId" id="categoryCombo">
              <option value="">Select</option>
              <% categories.forEach(category=>{ %>
              <option value="<%= category.id %>"><%= category.title %></option>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="">Content</label>
            <textarea
              class="form-control"
              name="content"
              id="article"
              rows="3"
              id="article"
            >
            </textarea>
          </div>
          <br />
          <button type="submit" class="btn btn-success">Save</button>
        </form>
      </div>
    </div>
  </div>
  <div id="content" style="display: none"><%- article.body %></div>
</body>
<%- include ('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
  tinymce.init({
    language: "pt_BR",
    selector: "#article",
    plugins: [
      "advlist autolink link image lists print preview hr searchreplace wordcount fullscreen inserdatetime media save table paste emoticons",
    ],
    setup: function (editor) {
      editor.on("init", function (e) {
        editor.setContent($("#content").html());
      });
    },
  });
</script>
