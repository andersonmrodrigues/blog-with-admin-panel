<%- include ('partials/header.ejs') %> <%- include ('partials/homenavbar.ejs')
%>
<body>
  <div class="container">
    <hr />
    <div class="jumbotron">
      <h1 class="display-3">Welcome</h1>
      <p class="lead">This is a simple blog</p>
      <hr class="my-2" />
      <p class="lead">
        <a class="btn btn-primary btn-lg" href="Jumbo action link" role="button"
          >Read more</a
        >
      </p>
    </div>
    <% articles.forEach(article =>{ %>
    <div class="card">
      <div class="card-header">
        <h2><%= article.title %></h2>
      </div>
      <div class="card-body">
        <a
          name=""
          id=""
          class="btn btn-success"
          href="/<%= article.slug %>"
          role="button"
          >Read</a
        >
      </div>
    </div>
    <br />

    <% }) %>
    <div class="row">
      <div class="col col-12">
        <a style="float: right" class="btn btn-primary" href="articles/page/2"
          >Next</a
        >
      </div>
      <hr />
    </div>
  </div>
</body>
